<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="bill_preferences">


    <EditTextPreference
        android:id="@+id/editWhat"
        android:icon="@drawable/ic_title_grey_24dp"
        android:dialogMessage="@string/setting_what_long"
        android:dialogTitle="@string/setting_what"
        android:key="what"
        android:singleLine="true"
        android:selectAllOnFocus="true"
        android:persistent="false"
        android:summary=""
        android:title="@string/setting_what" />

    <DatePickerPreference
        android:id="@+id/editDate"
        android:icon="@drawable/ic_today_grey_24dp"
        android:dialogMessage="@string/setting_date_long"
        android:dialogTitle="@string/setting_date"
        android:key="date"
        android:persistent="false"
        android:summary=""
        android:title="@string/setting_date" />

    <androidx.preference.ListPreference
        android:id="@+id/editPayer"
        android:icon="@drawable/ic_person_grey_24dp"
        android:dialogTitle="@string/setting_payer"
        android:key="payer"
        android:singleLine="true"
        android:selectAllOnFocus="true"
        android:persistent="false"
        android:summary=""
        android:title="@string/setting_payer" />

    <EditTextPreference
        android:id="@+id/editAmount"
        android:dialogMessage="@string/setting_amount_long"
        android:dialogTitle="@string/setting_amount"
        android:icon="@drawable/ic_dollar_grey_24dp"
        android:inputType="numberDecimal"
        android:key="amount"
        android:persistent="false"
        android:selectAllOnFocus="true"
        android:title="@string/setting_amount" />

    <androidx.preference.MultiSelectListPreference
        android:id="@+id/editOwers"
        android:icon="@drawable/ic_people_grey_24dp"
        android:dialogTitle="@string/setting_owers"
        android:key="owers"
        android:persistent="false"
        android:summary=""
        android:title="@string/setting_owers" />

</PreferenceScreen>