<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include
        layout="@layout/activity_bills_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="false">


        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:orientation="horizontal"

                android:theme="@style/ThemeOverlay.AppCompat.Dark">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/ic_launcher" />


                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="12dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/selectedProject"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".70"
                            android:layout_marginEnd="2dp"
                            android:layout_marginRight="2dp"
                            android:text="@string/drawer_no_project"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:layout_gravity="center_vertical"
                            android:textSize="14sp" />

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/fab_select_project"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:padding="0dp"
                            android:src="@drawable/ic_arrow_down_grey_24dp"
                            android:tint="#ffffff"
                            android:title="@string/action_select_project"
                            app:backgroundTint="@color/primary_dark"
                            app:fabCustomSize="40dp"
                            app:rippleColor="@color/bg_highlighted"
                            app:useCompatPadding="false" />

                    </android.support.v7.widget.LinearLayoutCompat>


                </android.support.v7.widget.LinearLayoutCompat>
            </android.support.v7.widget.LinearLayoutCompat>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_create"
                    style="@style/fab"
                    android:src="@android:drawable/ic_input_add"
                    android:tint="#ffffff"
                    android:title="@string/action_create"
                    app:backgroundTint="@color/primary"
                    app:rippleColor="@color/primary_dark" /-->




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/navigationMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/separator" />


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/navigationList"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:scrollbarFadeDuration="500"
                            android:scrollbars="vertical"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>


                    </LinearLayout>




                <com.github.clans.fab.FloatingActionMenu
                    android:id="@+id/floatingMenuDrawerEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    fab:menu_icon="@android:drawable/ic_menu_manage"
                    android:layout_gravity="top|right"
                    android:layout_marginRight="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="50dp"
                    fab:menu_animationDelayPerItem="0"
                    fab:menu_backgroundColor="@color/bg_fab_transparent"
                    fab:menu_colorNormal="@color/primary"
                    fab:menu_colorPressed="@color/primary"
                    fab:menu_colorRipple="#ffffff"
                    fab:menu_fab_label="@string/simple_cancel"
                    fab:menu_fab_size="mini"
                    fab:menu_labels_ellipsize="end"
                    fab:menu_labels_singleLine="true"
                    fab:menu_openDirection="down">

                    <!--com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fabDrawer_delete_member"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_menu_delete"
                        app:fab_colorNormal="@color/primary"
                        app:fab_colorPressed="@color/primary"
                        app:fab_hideAnimation="@anim/fab_slide_out_to_right"
                        app:fab_showAnimation="@anim/fab_slide_in_from_right"
                        fab:fab_label="@string/fab_del_member"
                        fab:fab_size="normal" /-->

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fabDrawer_settle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_money_off_white_24dp"
                        app:fab_colorNormal="@color/primary"
                        app:fab_colorPressed="@color/primary"
                        app:fab_hideAnimation="@anim/fab_slide_out_to_left"
                        app:fab_showAnimation="@anim/fab_slide_in_from_left"
                        fab:fab_label="@string/fab_settle"
                        fab:fab_size="normal" />

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fabDrawer_statistics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_chart_white_24dp"
                        app:fab_colorNormal="@color/primary"
                        app:fab_colorPressed="@color/primary"
                        app:fab_hideAnimation="@anim/fab_slide_out_to_right"
                        app:fab_showAnimation="@anim/fab_slide_in_from_right"
                        fab:fab_label="@string/fab_statistics"
                        fab:fab_size="normal" />

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fabDrawer_edit_member"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_account_circle_white_24dp"
                        app:fab_colorNormal="@color/primary"
                        app:fab_colorPressed="@color/primary"
                        app:fab_hideAnimation="@anim/fab_slide_out_to_left"
                        app:fab_showAnimation="@anim/fab_slide_in_from_left"
                        fab:fab_label="@string/fab_edit_member"
                        fab:fab_size="normal" />

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fabDrawer_remove_project"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_menu_delete"
                        app:fab_colorNormal="@color/primary"
                        app:fab_colorPressed="@color/primary"
                        app:fab_hideAnimation="@anim/fab_slide_out_to_right"
                        app:fab_showAnimation="@anim/fab_slide_in_from_right"
                        fab:fab_label="@string/fab_rm_project"
                        fab:fab_size="normal" />

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fabDrawer_edit_project"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_menu_edit"
                        app:fab_colorNormal="@color/primary"
                        app:fab_colorPressed="@color/primary"
                        app:fab_hideAnimation="@anim/fab_slide_out_to_left"
                        app:fab_showAnimation="@anim/fab_slide_in_from_left"
                        fab:fab_label="@string/action_edit_project"
                        fab:fab_size="normal" />

                </com.github.clans.fab.FloatingActionMenu>

                <com.github.clans.fab.FloatingActionMenu
                    android:id="@+id/floatingMenuDrawer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top|right"
                    fab:menu_animationDelayPerItem="0"
                    fab:menu_backgroundColor="@color/bg_fab_transparent"
                    fab:menu_colorNormal="@color/primary"
                    fab:menu_colorPressed="@color/primary"
                    fab:menu_colorRipple="#ffffff"
                    fab:menu_fab_label="@string/simple_cancel"
                    fab:menu_fab_size="mini"
                    fab:menu_labels_ellipsize="end"
                    fab:menu_labels_singleLine="true"
                    fab:menu_openDirection="down">

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fabDrawer_add_member"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_account_circle_white_24dp"
                        app:fab_colorNormal="@color/primary"
                        app:fab_colorPressed="@color/primary"
                        app:fab_hideAnimation="@anim/fab_slide_out_to_right"
                        app:fab_showAnimation="@anim/fab_slide_in_from_right"
                        fab:fab_label="@string/fab_add_member"
                        fab:fab_size="normal" />

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fabDrawer_add_project"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_menu_add"
                        app:fab_colorNormal="@color/primary"
                        app:fab_colorPressed="@color/primary"
                        app:fab_hideAnimation="@anim/fab_slide_out_to_left"
                        app:fab_showAnimation="@anim/fab_slide_in_from_left"
                        fab:fab_label="@string/fab_add_project"
                        fab:fab_size="normal" />

                </com.github.clans.fab.FloatingActionMenu>



            </FrameLayout>

        </android.support.v7.widget.LinearLayoutCompat>



    </android.support.design.widget.NavigationView>



</android.support.v4.widget.DrawerLayout>