<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include
        layout="@layout/activity_bills_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="false">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/drawer_top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:orientation="horizontal"

                android:theme="@style/ThemeOverlay.AppCompat.Dark">

                <ImageView
                    android:id="@+id/drawer_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/ic_launcher" />


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="6dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/app_name"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/selectedProject"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".70"
                            android:layout_marginEnd="2dp"
                            android:layout_marginRight="2dp"
                            android:text="@string/drawer_no_project"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:layout_gravity="center_vertical"
                            android:textSize="14sp" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fab_select_project"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginBottom="0dp"
                            android:padding="0dp"
                            android:src="@drawable/ic_arrow_down_grey_24dp"
                            android:tint="#ffffff"
                            android:title="@string/action_select_project"
                            app:backgroundTint="@color/primary_dark"
                            app:fabCustomSize="40dp"
                            app:rippleColor="@color/bg_highlighted"
                            app:elevation="0dp"
                            app:pressedTranslationZ="0dp"
                            app:useCompatPadding="true" />

                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_create"
                    style="@style/fab"
                    android:src="@android:drawable/ic_input_add"
                    android:tint="#ffffff"
                    android:title="@string/action_create"
                    app:backgroundTint="@color/primary"
                    app:rippleColor="@color/primary_dark" /-->




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/navigationMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/separator" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/navigationList"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:scrollbarFadeDuration="500"
                            android:scrollbars="vertical"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


                    </LinearLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_add_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabSize="mini"
                    android:paddingRight="0dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="0dp"
                    android:paddingStart="0dp"
                    android:paddingTop="0dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="top|start"
                    android:src="@drawable/ic_person_add_white_24dp"
                    android:tint="#ffffff"
                    android:title="@string/fab_add_member"
                    app:backgroundTint="@color/primary"
                    app:rippleColor="@color/primary_dark" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_statistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabSize="mini"
                    android:paddingRight="0dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="0dp"
                    android:paddingStart="0dp"
                    android:paddingTop="0dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginStart="60dp"
                    android:layout_gravity="top|start"
                    android:src="@drawable/ic_chart_white_24dp"
                    android:tint="#ffffff"
                    android:title="@string/fab_statistics"
                    app:backgroundTint="@color/primary"
                    app:rippleColor="@color/primary_dark" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_settle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabSize="mini"
                    android:paddingRight="0dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="0dp"
                    android:paddingStart="0dp"
                    android:paddingTop="0dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginStart="110dp"
                    android:layout_gravity="top|start"
                    android:src="@drawable/ic_compare_arrows_white_24dp"
                    android:tint="#ffffff"
                    android:title="@string/fab_settle"
                    app:backgroundTint="@color/primary"
                    app:rippleColor="@color/primary_dark" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabSize="mini"
                    android:paddingRight="0dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="0dp"
                    android:paddingStart="0dp"
                    android:paddingTop="0dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginStart="160dp"
                    android:layout_gravity="top|start"
                    android:src="@drawable/ic_share_white_24dp"
                    android:tint="#ffffff"
                    android:title="@string/action_share_project"
                    app:backgroundTint="@color/primary"
                    app:rippleColor="@color/primary_dark" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabSize="mini"
                    android:paddingRight="0dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="0dp"
                    android:paddingStart="0dp"
                    android:paddingTop="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="top|end"
                    android:src="@drawable/ic_info_outline_grey600_24dp"
                    android:tint="#ffffff"
                    android:title="@string/action_create_bill"
                    app:backgroundTint="@color/primary"
                    app:rippleColor="@color/primary_dark" />


                <com.github.clans.fab.FloatingActionMenu
                    android:id="@+id/floatingMenuDrawerEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    fab:menu_icon="@drawable/ic_more_vert_white_24dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="53dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginEnd="3dp"
                    android:paddingRight="0dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="0dp"
                    android:paddingStart="0dp"
                    android:paddingTop="0dp"
                    fab:menu_animationDelayPerItem="0"
                    fab:menu_backgroundColor="@color/bg_fab_transparent"
                    fab:menu_colorNormal="@color/primary"
                    fab:menu_colorPressed="@color/primary"
                    fab:menu_colorRipple="#ffffff"
                    fab:menu_fab_label=""
                    fab:menu_fab_size="mini"
                    fab:menu_labels_ellipsize="end"
                    fab:menu_labels_singleLine="true"
                    fab:menu_openDirection="down">

                    <!--com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fabDrawer_delete_member"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_menu_delete"
                        app:fab_colorNormal="@color/primary"
                        app:fab_colorPressed="@color/primary"
                        app:fab_hideAnimation="@anim/fab_slide_out_to_right"
                        app:fab_showAnimation="@anim/fab_slide_in_from_right"
                        fab:fab_label="@string/fab_del_member"
                        fab:fab_size="normal" /-->

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fabDrawer_edit_member"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_account_circle_white_24dp"
                        app:fab_colorNormal="@color/primary"
                        app:fab_colorPressed="@color/primary"
                        app:fab_hideAnimation="@anim/fab_slide_out_to_left"
                        app:fab_showAnimation="@anim/fab_slide_in_from_left"
                        fab:fab_label="@string/fab_edit_member"
                        fab:fab_size="mini" />

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fabDrawer_remove_project"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_delete_white_24dp"
                        app:fab_colorNormal="@color/primary"
                        app:fab_colorPressed="@color/primary"
                        app:fab_hideAnimation="@anim/fab_slide_out_to_right"
                        app:fab_showAnimation="@anim/fab_slide_in_from_right"
                        fab:fab_label="@string/fab_rm_project"
                        fab:fab_size="mini" />

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fabDrawer_edit_project"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_edit_white_24dp"
                        app:fab_colorNormal="@color/primary"
                        app:fab_colorPressed="@color/primary"
                        app:fab_hideAnimation="@anim/fab_slide_out_to_left"
                        app:fab_showAnimation="@anim/fab_slide_in_from_left"
                        fab:fab_label="@string/action_edit_project"
                        fab:fab_size="mini" />


                </com.github.clans.fab.FloatingActionMenu>




            </FrameLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>



    </com.google.android.material.navigation.NavigationView>



</androidx.drawerlayout.widget.DrawerLayout>